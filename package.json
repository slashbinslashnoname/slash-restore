{
  "name": "slash-restore",
  "version": "1.0.0",
  "description": "Cross-platform data recovery application",
  "homepage": "https://github.com/slashbinslashnoname/slash-restore",
  "author": {
    "name": "slashbin",
    "email": "slashbinslashnoname@gmail.com"
  },
  "license": "MIT",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev -- --no-sandbox",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "pack:linux": "electron-vite build && electron-builder --linux",
    "pack:mac": "electron-vite build && electron-builder --mac",
    "pack:win": "electron-vite build && electron-builder --win",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "plist": "^3.1.0",
    "uuid": "^9.0.0",
    "zustand": "^4.5.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^6.23.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@radix-ui/react-tabs": "^1.0.4",
    "lucide-react": "^0.378.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.12.0",
    "@types/plist": "^3.0.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0",
    "electron-vite": "^2.2.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "build": {
    "appId": "com.slashrestore.app",
    "productName": "Slash Restore",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
